@{
    ViewBag.Title = "Calc Page";
}
<br/>
<br />



@model CalculatorApp.Models.Calculate
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Calculator"))
{

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-2">@Html.Label("Enter first number") : </div>
                <div class="col-lg-2 ">@Html.TextBoxFor(model => model.Num1, new { @class = "form-control input-sm" })</div>
                <div class="col-lg-2">@Html.Label("Enter second number") : </div>
                <div class="col-lg-2">@Html.TextBoxFor(model => model.num2, new { @class = "form-control input-sm" })</div>
                <div class="col-lg-1">
                    =@if (Model != null && Model.Answer != null)
                    {
                        @Model.Answer;
                    }
                </div>
            </div>
                <div class="row col-lg-12">
                    <h2>
                        @Html.RadioButtonFor(model => model.Operator, "Add") +
                        <br>
                        @Html.RadioButtonFor(model => model.Operator, "Subtract") -
                        <br>
                        @Html.RadioButtonFor(model => model.Operator, "Multiply") *
                        <br>
                        @Html.RadioButtonFor(model => model.Operator, "Divide") /
                    </h2>
                </div>
            </div>
                <div class="col-lg-12">
                    <input type="submit" name="Index" value="Calculate" />
                    <input type="submit" name="Index" value="Clear" onclick="location.href='@Url.Action("Clear", "Calculator")'" />
                </div>

                 
    </div>


}

